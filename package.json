{
  "name": "slidecraft",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.17.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@tailwindcss/oxide",
      "core-js",
      "esbuild"
    ]
  },
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "lint": "biome lint .",
    "format": "prettier . --check --experimental-cli",
    "format:fix": "prettier . --write --experimental-cli",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "validate": "run-p format lint && run-p typecheck",
    "db:migrate": "atlas migrate diff --env local",
    "db:apply": "atlas migrate apply --env local",
    "db:codegen": "kysely-codegen --dialect libsql --url 'file:./data/local.db' --camel-case --out-file app/lib/db/types.ts --exclude-pattern atlas_schema_revisions",
    "turso:apply": "dotenv -e .env.production -- atlas schema apply --env turso",
    "turso:shell": "turso db shell slidecraft"
  },
  "dependencies": {
    "@coji/durably": "0.7.0",
    "@coji/durably-react": "0.7.0",
    "@google/genai": "1.35.0",
    "@libsql/client": "0.17.0",
    "@radix-ui/react-popover": "1.1.15",
    "@react-router/node": "7.12.0",
    "@react-router/serve": "7.12.0",
    "@upstash/ratelimit": "2.0.7",
    "@upstash/redis": "1.36.1",
    "@vercel/react-router": "1.2.4",
    "better-auth": "1.4.10",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "isbot": "5.1.32",
    "jspdf": "4.0.0",
    "kysely": "0.28.9",
    "kysely-libsql": "0.7.1",
    "lucide-react": "0.562.0",
    "next-themes": "0.4.6",
    "pdfjs-dist": "5.4.530",
    "pptxgenjs": "4.0.1",
    "radix-ui": "latest",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-resizable-panels": "4.3.3",
    "react-router": "7.12.0",
    "sonner": "2.0.7",
    "sqlocal": "0.16.0",
    "tailwind-merge": "3.4.0",
    "ts-pattern": "5.9.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@react-router/dev": "7.12.0",
    "@tailwindcss/vite": "4.1.18",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.1",
    "@testing-library/user-event": "14.6.1",
    "@types/node": "25.0.5",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.2",
    "@vitest/ui": "4.0.16",
    "cc-hooks-ts": "2.1.2",
    "dotenv-cli": "11.0.0",
    "happy-dom": "20.1.0",
    "kysely-codegen": "0.19.0",
    "npm-run-all": "4.1.5",
    "prettier": "3.7.4",
    "prettier-plugin-organize-imports": "4.3.0",
    "prettier-plugin-tailwindcss": "0.7.2",
    "react-router-auto-routes": "0.7.1",
    "tailwindcss": "4.1.18",
    "tsx": "4.21.0",
    "tw-animate-css": "1.4.0",
    "typescript": "5.9.3",
    "vite": "7.3.1",
    "vite-plugin-devtools-json": "1.0.0",
    "vite-tsconfig-paths": "6.0.4",
    "vitest": "4.0.16",
    "zx": "8.8.5"
  }
}
